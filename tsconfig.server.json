{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": ".dist",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es6",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "server/**/*.ts", "types/**/*.ts", "lib/utils.ts", "lib/firebase.ts", ".env.local"],
  "exclude": ["node_modules"]
}
